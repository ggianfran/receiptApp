@import url("https://fonts.googleapis.com/css2?family=Poppins:wght@200;400&display=swap");

* {
  box-sizing: border-box;
}

body {
  background-color: #ecfff0;
  font-family: "Poppins", sans-serif;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  margin: 0;
}

h1 {
  color: rgb(179, 131, 226);
  font-size: 3rem;
  text-align: center;
  opacity: 0.4;
}

h3 {
  color: rgb(179, 131, 226);
  font-size: 1.5rem;
  text-align: center;
  opacity: 0.4;
  height: 100%;
  width: 100%;
  padding: 0;
}

form {
  max-width: 100%;
  width: 100%;
  margin-block-end: 0;
}

.entry,
.entry-template,
.entry-form-container {
  display: flex;
  background-color: #fff;
  width: 30rem;
  height: 4rem;
  clear: both;
}

.input {
  border: none;
  color: #444;
  font-size: 2rem;
  padding: 1rem 2rem;
  display: flex;
  width: 100%;
  clear: both;
}

.input::placeholder {
  color: #d5d5d5;
}

.input:focus {
  outline-color: rgb(179, 131, 226);
}

.group-indicator-holder {
  width: 20%;
  display: flex;
  border: blue;
  border-width: 2px;
  background-color: blue;
}
.group-indicator {
  width: 20%;
  height: 30%;
  background-color: red;
  display: block;
  margin: auto;
  margin-right: 5%;
  margin-left: 5%;
  border-radius: 1rem;
}

.total {
  background-color: #fff;
  border: none;
  color: #444;
  font-size: 2rem;
  padding: 1rem 2rem;
  display: flex;
  width: 60%;
  margin-top: 1rem;
}

#entry-template {
  /* display: none; */
}

div[category="1"] {
  background-color: rgb(42, 221, 42);
}
